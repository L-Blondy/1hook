{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev:build": {
      "cache": false,
      "persistent": true
    },
    "dev:test": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:typescript": {
      "dependsOn": ["^lint:typescript"]
    },
    "lint:eslint": {
      "dependsOn": ["^lint:eslint"]
    }
  }
}
